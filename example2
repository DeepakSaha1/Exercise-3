Schema Design:

CREATE TABLE ORDERS (ORDER_ID INT(4) UNSIGNED AUTO_INCREMENT PRIMARY KEY,CUS_ID INT(4) NOT NULL , SALESPERSON_ID INT(4) NOT NULL);

CREATE TABLE CUSTOMERS (CUS_ID INT(4) UNSIGNED AUTO_INCREMENT PRIMARY KEY,CUS_NAME VARCHAR(10) NOT NULL , ADDRESS VARCHAR(40) NOT NULL);

CREATE TABLE SALES_PERSON (SALES_PERSON_ID INT(4) UNSIGNED AUTO_INCREMENT PRIMARY KEY,SALES_PERSON_NAME VARCHAR(10) NOT NULL , AGE INT(20) NOT NULL);


